{% extends "base.njk" %}

{% block titulo %}Lista de Jugadores{% endblock %}

{% block contenido %}
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="h2">Listado de Jugadores</h1>
        <a href="/players/new" class="btn btn-primary disabled" aria-disabled="true">Nuevo Jugador</a>
    </div>
    
    {% if players.length > 0 %}
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Nickname</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">País</th>
                        <th scope="col">Fecha Nacimiento</th>
                        <th scope="col">Rol</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in players %}
                        <tr>
                            <td class="fw-bold">{{ player.nickname }}</td>
                            <td>{{ player.name }}</td>
                            <td>{{ player.country }}</td>
                            <td>{{ player.birthDate.toLocaleDateString() }}</td>
                            <td><span class="badge bg-secondary">{{ player.role }}</span></td>
                            <td class="text-end">
                                <a href="/players/{{ player.id }}" class="btn btn-sm btn-outline-info">Ver</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info shadow-sm" role="alert">
            <h4 class="alert-heading">¡Vaya!</h4>
            <p>No hay jugadores en el sistema actualmente.</p>
        </div>
    {% endif %}
{% endblock %}
