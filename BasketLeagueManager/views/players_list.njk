{% extends "base.njk" %}

{% block titulo %}Lista de Jugadores{% endblock %}

{% block contenido %}
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="h2">Listado de Jugadores</h1>
        {% if user.rol == 'admin' %}
            <a href="/players/new" class="btn btn-primary">Nuevo Jugador</a>
        {% endif %}
    </div>
    
    {% if players.length > 0 %}
        <div class="table-responsive shadow-sm rounded card-custom">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-dark text-uppercase">
                    <tr>
                        <th scope="col" class="py-3 ps-4">Nickname</th>
                        <th scope="col" class="py-3">Nombre</th>
                        <th scope="col" class="py-3">País</th>
                        <th scope="col" class="py-3">Fecha Nacimiento</th>
                        <th scope="col" class="py-3">Rol</th>
                        <th scope="col" class="text-end py-3 pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    {% for player in players %}
                        <tr>
                            <td class="fw-bold ps-4 text-warning">{{ player.nickname }}</td>
                            <td>{{ player.name }}</td>
                            <td>{{ player.country }}</td>
                            <td>{{ player.birthDate.toLocaleDateString() }}</td>
                            <td>
                                <span class="badge rounded-pill bg-dark text-warning border border-warning">
                                    {{ player.role }}
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a href="/players/{{ player.id }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>
                                    <a href="/players/{{ player.id }}/edit" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a href="/players/{{ player.id }}/delete" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Eliminar jugador?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info shadow-sm" role="alert">
            <h4 class="alert-heading">¡Vaya!</h4>
            <p>No hay jugadores en el sistema actualmente.</p>
        </div>
    {% endif %}
{% endblock %}
