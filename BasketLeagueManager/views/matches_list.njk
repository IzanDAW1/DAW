{% extends "base.njk" %}

{% block titulo %}Lista de Partidos{% endblock %}

{% block contenido %}
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1 class="h2">Calendario de Partidos</h1>
        <a href="/matches/new" class="btn btn-primary disabled" aria-disabled="true">Nuevo Partido</a>
    </div>

    {% if matches.length > 0 %}
        <div class="table-responsive shadow-sm rounded card-custom">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-dark text-uppercase">
                    <tr>
                        <th scope="col" class="py-3 ps-4">Torneo</th>
                        <th scope="col" class="py-3">Fase</th>
                        <th scope="col" class="py-3">Fecha</th>
                        <th scope="col" class="py-3 text-center">Encuentro</th>
                        <th scope="col" class="py-3 text-center">Resultado</th>
                        <th scope="col" class="text-end py-3 pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    {% for match in matches %}
                        <tr>
                            <td class="fw-bold ps-4 text-warning">{{ match.tournament }}</td>
                            <td><span class="badge bg-light text-dark border">{{ match.stage }}</span></td>
                            <td>{{ match.date.toLocaleDateString() }}</td>
                            <td class="text-center">
                                <span class="fw-bold">{{ match.homeTeam.name }}</span> 
                                <span class="text-muted mx-2">vs</span> 
                                <span class="fw-bold">{{ match.awayTeam.name }}</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-dark fs-6">{{ match.homeScore }} - {{ match.awayScore }}</span>
                            </td>
                            <td class="text-end pe-4">
                                <a href="/matches/{{ match.id }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Ver Detalles
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info shadow-sm" role="alert">
            <h4 class="alert-heading">Sin partidos</h4>
            <p>No hay partidos registrados en el sistema actualmente.</p>
        </div>
    {% endif %}
{% endblock %}
