{% extends "base.njk" %}

{% block titulo %}Login{% endblock %}

{% block contenido %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card card-custom border-0" style="max-width: 400px; width: 100%;">
            <div class="card-header card-header-custom text-center py-3">
                <i class="bi bi-basket-fill me-2"></i> Iniciar Sesión
            </div>
            <div class="card-body p-4">
                {% if error %}
                    <div class="alert alert-danger mb-3 border-0 shadow-sm" role="alert">
                        {{ error }}
                    </div>
                {% endif %}
                
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="login" class="form-label fw-bold text-uppercase small text-muted">Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-person"></i></span>
                            <input type="text" class="form-control bg-light border-0" id="login" name="login" placeholder="Ej: usuario1" required autofocus>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label fw-bold text-uppercase small text-muted">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control bg-light border-0" id="password" name="password" placeholder="••••••••" required>
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">Entrar al Juego</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3 bg-white border-0">
                <small class="text-muted">¿No tienes cuenta? <a href="#" class="text-decoration-none text-warning fw-bold">Fichar ahora</a></small>
            </div>
        </div>
    </div>
{% endblock %}
