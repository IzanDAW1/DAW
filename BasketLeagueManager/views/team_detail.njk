{% extends "base.njk" %}

{% block titulo %}Detalles del Equipo{% endblock %}

{% block contenido %}
    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card card-custom h-100">
                <div class="card-header card-header-custom text-center">
                    {{ result.name }}
                </div>
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <div class="display-1 text-warning mb-3">
                        <i class="bi bi-shield-shaded"></i>
                    </div>
                    <p class="card-text">
                        <strong>Fundado:</strong> 
                        {% if result.foundedAt %}
                            {{ result.foundedAt.toLocaleDateString() }}
                        {% else %}
                            Desconocido
                        {% endif %}
                    </p>
                    <div class="mt-auto">
                        <a href="/teams" class="btn btn-outline-secondary w-100">Volver a la lista</a>
                        {% if user.rol == 'admin' %}
                            <a href="/teams/{{ result._id }}/roster/new" class="btn btn-primary w-100 mt-2">Añadir Jugador</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card card-custom h-100">
                <div class="card-header bg-dark text-white border-bottom border-warning">
                    <h4 class="mb-0"><i class="bi bi-people-fill text-warning me-2"></i> Plantilla ({{ result.roster.length }})</h4>
                </div>
                <div class="card-body p-0">
                    {% if result.roster.length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" class="ps-4">Jugador</th>
                                        <th scope="col">Posición</th>
                                        <th scope="col">País</th>
                                        <th scope="col" class="text-end pe-4">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for member in result.roster %}
                                        <tr>
                                            <td class="ps-4 fw-bold">
                                                {{ member.player.name }} 
                                                <small class="text-muted">({{ member.player.nickname }})</small>
                                            </td>
                                            <td><span class="badge bg-light text-dark border">{{ member.player.role }}</span></td>
                                            <td>{{ member.player.country }}</td>
                                            <td class="text-end pe-4">
                                                <a href="/players/{{ member.player.id }}" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-person-badge"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-person-x display-4 mb-3 d-block"></i>
                            <p>No hay jugadores activos en este equipo.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
